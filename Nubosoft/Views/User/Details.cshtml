@model Nubosoft.Models.User

@{
    ViewBag.Title = "Detalles";
}
<div class="container mt-5">
    <div class="card mx-auto shadow" style="max-width: 500px;">
        <div class="card-body">
            <h4 class="card-title text-center fw-bold mb-4">
                <i class="fa fa-user-circle me-2"></i>
                Detalles del Usuario
            </h4>

            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-semibold">Nombre:</span>
                    <span>@Html.DisplayFor(m => m.Name)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-semibold">Apellido:</span>
                    <span>@Html.DisplayFor(m => m.LastName)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-semibold">NombreUsuario:</span>
                    <span>@Html.DisplayFor(m => m.Username)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-semibold">Email:</span>
                    <span>@Html.DisplayFor(m => m.Email)</span>
                </li>
            </ul>

            <div class="d-flex justify-content-center gap-3">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary d-flex align-items-center gap-2">
                    <i class="fa fa-arrow-left"></i>
                    Regresar al Inicio
                </a>
            </div>
        </div>
    </div>
</div>
