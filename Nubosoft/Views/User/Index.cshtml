@model IEnumerable<Nubosoft.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>User Management</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Editar
        </th>
        <th>
            Detalles
        </th>
        <th>
            Eliminar
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="align-middle">
                <a href="@Url.Action("Edit", "User", new { id = item.Id })"
                   class="btn text-purple border-0">
                    <i class="fas fa-pencil-alt"></i> Editar
                </a>
            </td>
            <td class="align-middle">
                <a href="@Url.Action("Details", "User", new { id = item.Id })"
                   class="btn text-primary border-0">
                    <i class="fas fa-eye"></i> Detalles
                </a>
            </td>
            <td class="align-middle">
                <a href="@Url.Action("Delete", "User", new { id = item.Id })"
                   class="btn text-danger border-0">
                    <i class="fas fa-trash"></i> Borrar
                </a>
            </td>

        </tr>
    }
</table>

<p>
    <a href="@Url.Action("Create")" class="btn text-white fw-semibold d-inline-flex align-items-center gap-2" style="background-color: #7b20e3; border-radius: 12px;">
        <i class="fa fa-plus"></i>
        Nuevo...
    </a>
</p>

