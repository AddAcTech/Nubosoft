@model Nubosoft.Models.User

@{
    ViewBag.Title = "Editar";
}

<div class="container mt-5">
    <div class="card mx-auto shadow" style="max-width: 450px;">
        <div class="card-body">
            <h4 class="card-title text-center mb-4 fw-bold">Editar Usuario</h4>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="mb-3">
                    <label class="form-label fw-semibold">NombreUsuario</label>
                    <div class="input-group w-100">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "john.doe" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Nombre</label>
                    <div class="input-group w-100">
                        <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "John" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Apellido</label>
                    <div class="input-group w-100">
                        <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Doe" })
                    </div>
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Email</label>
                    <div class="input-group w-100">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "you@example.com", type = "email" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="text-center fw-semibold">
                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-primary d-flex align-items-center gap-2" style="background-color: #7b20e3; border-color: #7b20e3;">
                            <i class="fa fa-save"></i>
                            Guardar
                        </button>

                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary d-flex align-items-center gap-2">
                            <i class="fa fa-arrow-left"></i>
                            Regresar al Inicio
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
